{
  "version": 2,
  "buildCommand": "npm run build",
  "outputDirectory": ".next",
  "public": false,
  "framework": "nextjs",
  "regions": ["cdg1"],
  "rewrites": [
    { "source": "/(.*)", "destination": "/" }
  ],
  "env": {
    "NEXT_PUBLIC_FORCE_DYNAMIC": "true",
    "NEXT_RUNTIME": "nodejs"
  },
  "build": {
    "env": {
      "NEXT_PUBLIC_FORCE_DYNAMIC": "true",
      "NEXT_RUNTIME": "nodejs"
    }
  }
} 